root = true

[*]
end_of_line              = lf
insert_final_newline     = true
charset                  = utf-8
trim_trailing_whitespace = true
indent_style             = space

[*.go]
indent_style= tab

[*.html]
indent_size = 2

[*.js]
indent_size = 2

[*.css]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.sh]
indent_size = 4

[.justfile]
indent_size = 2
